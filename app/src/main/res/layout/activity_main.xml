<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/bold"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/checkbox_selection"
                android:button="@drawable/ic_format_bold_black_24dp"
                android:onClick="onCheckBoxChecked" />

            <CheckBox
                android:id="@+id/italic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/checkbox_selection"
                android:button="@drawable/ic_format_italic_black_24dp"
                android:onClick="onCheckBoxChecked" />

            <CheckBox
                android:id="@+id/underline"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/checkbox_selection"
                android:button="@drawable/ic_format_underlined_black_24dp"
                android:onClick="onCheckBoxChecked" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>